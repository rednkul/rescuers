import datetime

def next_attestation(value):

    last_attestation = datetime.datetime.strptime(value, '%d.%m.%Y')

    next_attestation = datetime.date(last_attestation.year + 3, last_attestation.month, last_attestation.day)

    return next_attestation.strftime('%d.%B.%Y')

print(next_attestation('01.01.2021'))